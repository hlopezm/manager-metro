%p#notice= notice

%h1= @project.name
%p
  %b Cartera:
  = @project.portfolio.name
%p
  %b Zona Metropolitana:
  = @project.category.name
%p
  %b Ubicación:
  = @project.location

%p
  %b Ejecutora:
  = @project.executor.name

%p
  %b Monto Autorizado:
  = number_to_currency @project.authorized_amount

%p
  %b Monto Contratado:
  = number_to_currency @project.price

%p
  %b Economía:
  = number_to_currency @project.economy

%p
  %b Intereses:
  = number_to_currency @project.interest

%p
  = image_tag @project.image.url(:medium)

%p
  %b Estatus:
  = @project.status.title

%p
  %b Avance Físico:
  = number_to_percentage @project.physical_progress
  \ |
  %b Avance Financiero:
  = number_to_percentage @project.financial_progress

%p
  %b Pagado:
  = @project.paid

%p
  %b Por pagar:
  = @project.payable

%p
  %b No. Oficio de Notificación:
  = @project.auth_number


%p
  %b Meta Programada:
  = @project.target_set
  \|
  = @project.unit.name

%p
  %b Fecha Inicio:
  = @project.start_date
  \
  %b Fecha Fin:
  = @project.end_date

%p
  %b SHCP Inicio:
  = @project.shcp_start
  \
  %b SHCP Fin:
  = @project.shcp_end

%p
  %b Adendum a Oficio de Notificación:
  = @project.auth_number

%p
  %b Observaciones:
  = @project.observations

-#%p= link_to "agregar a reporte", add_report_path, method: :post,  class: "btn btn-primary"

%p
  = link_to 'Edit', edit_project_path(@project), class: "btn btn-default"
  \|
  = link_to 'Back', projects_path, class: "btn btn-default"
